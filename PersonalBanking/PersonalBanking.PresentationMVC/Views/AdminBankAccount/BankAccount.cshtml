@model IEnumerable<PersonalBanking.PresentationMVC.Models.BankAccountViewModel>

@{
    ViewBag.Title = "BankAccount";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>BankAccount</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpenDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reimbursement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Restricted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepIntRate)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.FiscalCode)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AccNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Balance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpenDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reimbursement)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Restricted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepIntRate)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.FiscalCode)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditBankAccount", new { bankAccountId = item.Id }) |
            @Html.ActionLink("Delete", "DeleteBankAccount", new { bankAccountId = item.Id})
        </td>
    </tr>
}

</table>
