@model IEnumerable<PersonalBanking.PresentationMVC.Models.CurrentAccountViewModel>

@{
    ViewBag.Title = "CurrentBankAccounts";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<h2>Current bank accounts</h2>

<table class="table table-striped table-bordered table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpenDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Currency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Restricted)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Restricted)
            </td>
        </tr>
    }
</table>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="text-center table-bordered" style="background-color:aliceblue">
            <h2>Transfer money! It's free for you!!!</h2>
            <h5><span style="color: red"> We have 0% comission for our clients!</span></h5>
