@using System.Web.Optimization
@{
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/User/Login");
    }
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Personal Banking</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/leftSideNav.css" rel="stylesheet" />

    <style>
        .panel-footer.panel-custom {
            background-color: #222;
            border-color: #080808;
            color: silver;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top" >
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand text-white" href="#">Personal Banking</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home Page", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>
            <form class="navbar-form navbar-left">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#">Contact us</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Wellcome @Session["Username"] <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Index", "ClientBanking")"><span class="glyphicon glyphicon-menu-down"></span>Banking menu</a></li>
                        <li><a href="@Url.Action("LogOut", "User")"><span class="glyphicon glyphicon-log-out"></span>Log Out</a></li>
                    </ul>
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="body-content">

    <div id="sideNav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="#">@Html.ActionLink("Current accounst list", "CurrentBankAccounts", "ClientBanking")</a>
        <a href="#">@Html.ActionLink("Card list", "Cards", "ClientBanking")</a>
        <a href="#">@Html.ActionLink("Transaction History", "Transactions", "ClientBanking")</a>
        <a href="#">@Html.ActionLink("Public paymants", "PaymantMenu", "ClientBanking")</a>


    </div>

    <div id="main">
        <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; Menu</span>
        @RenderBody()
    </div>
</div>
<div class="panel-footer panel-custom navbar-fixed-bottom text-center">
    <p>&copy; @DateTime.Now.Year - Personal Banking</p>
</div>



<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/ValidateDateRange.js"></script>

<script src="~/Scripts/leftSideNavOpenClose.js"></script>

@Scripts.Render("~/bundles/datatables")
@Styles.Render("~/Content/datatables")

@*@RenderSection("Scripts")*@

</body>
</html>